@{
    ViewData["Title"] = "Healthcare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to bottom right, #ffffff, #87ceeb);
        }
        .navbar {
            background: linear-gradient(to right, #ffffff, #87ceeb);
        }
        .navbar-nav .nav-item .nav-link {
            color: #000;
            transition: color 0.3s;
        }
        .navbar-nav .nav-item .nav-link:hover {
            color: #007bff;
        }
        .cover-photo {
            position: relative;
            background-size: cover;
            height: 680px;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 12px;
            color: #fff;
        }
        .cover-photo .cover-content {
            background: rgba(255, 255, 255, 0.8);
            padding: 12px;
            border-radius: 50px;
            transform: translateY(100%);
            animation: slide-up 1s ease-out forwards;
        }
        @@keyframes slide-up {
            to {
                transform: translateY(0);
            }
        }
        .content {
            text-align: center;
            padding: 50px;
        }

        .carousel-item img {
            height: 680px;
            object-fit: cover;
        }

        .carousel-caption {
            background: rgba(0, 0, 0, 0.5);
            padding: 10px;
            border-radius: 8px;
        }

        .carousel-indicators li {
            background-color: #007bff;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #007bff;
            border-radius: 50%;
        }

        .carousel-control-prev-icon {
            background-image: url('data:image/svg+xml;charset=utf8,%3Csvg xmlns%3D%27http://www.w3.org/2000/svg%27 fill%3D%27%23007bff%27 viewBox%3D%270 0 8 8%27%3E%3Cpath d%3D%27M4.5 0L3.5 1 6 3.5 3.5 6 4.5 7 8 3.5 4.5 0z%27/%3E%3C/svg%3E');
        }

        .carousel-control-next-icon {
            background-image: url('data:image/svg+xml;charset=utf8,%3Csvg xmlns%3D%27http://www.w3.org/2000/svg%27 fill%3D%27007bff%27 viewBox%3D%270 0 8 8%27%3E%3Cpath d%3D%27M3.5 0L2.5 1 5 3.5 2.5 6 3.5 7 7 3.5 3.5 0z%27/%3E%3C/svg%3E');
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Healthcare</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Patients
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("Index", "Patients")">All Patients</a>
                        <a class="dropdown-item" href="@Url.Action("Create", "Patients")">Add New Patient</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Doctors
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("Index", "Doctors")">All Doctors</a>
                        <a class="dropdown-item" href="@Url.Action("Create", "Doctors")">Add New Doctor</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Labs
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("Index", "Doctors")">Lab Care System</a>
                        <a class="dropdown-item" href="@Url.Action("Create", "Doctors")">Report</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Pharmacy
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="@Url.Action("Index", "Doctors")">Pharmacy</a>
                        <a class="dropdown-item" href="@Url.Action("Create", "Doctors")">Pharmacy System</a>
                    </div>
                </li>
                <!-- Add more dropdowns or links as needed -->
            </ul>
        </div>
    </nav>

    <div id="carouselExampleIndicators" class="carousel slide cover-photo" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/images/healthcare/cover1.jpg")" class="d-block w-100" alt="Cover Photo 1">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Welcome to Our Healthcare System</h2>
                    <p>Providing exceptional care for our patients.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/images/healthcare/cover2.jpg")" class="d-block w-100" alt="Cover Photo 2">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Quality Healthcare</h2>
                    <p>Committed to excellence in healthcare.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/images/healthcare/cover3.jpg")" class="d-block w-100" alt="Cover Photo 3">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Your Health, Our Priority</h2>
                    <p>Ensuring your well-being with top-notch services.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/images/healthcare/cover4.jpg")" class="d-block w-100" alt="Cover Photo 4">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Advanced Medical Equipment</h2>
                    <p>Utilizing the latest technology for better outcomes.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/images/healthcare/cover5.jpg")" class="d-block w-100" alt="Cover Photo 5">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Experienced Doctors</h2>
                    <p>Our team of doctors are leaders in their fields.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/images/healthcare/cover6.jpg")" class="d-block w-100" alt="Cover Photo 6">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Comprehensive Care</h2>
                    <p>Offering a wide range of healthcare services.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/images/healthcare/cover7.jpg")" class="d-block w-100" alt="Cover Photo 7">
                <div class="carousel-caption d-none d-md-block">
                    <h2>Patient-Centered Approach</h2>
                    <p>Focusing on personalized care for each patient.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/images/healthcare/cover8.jpg")" class="d-block w-100" alt="Cover Photo 8">
                <div class="carousel-caption d-none d-md-block">
                    <h2>24/7 Emergency Services</h2>
                    <p>Always here for you in times of need.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="content">
        <h2>Healthcare Management System</h2>
        <h5>Your health is our priority</h5>
        <p>Welcome to our healthcare management system. Here, you can manage patient records, doctor schedules, and much more.</p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 5000 // 3 seconds
            });
        });
    </script>
</body>
</html>
