@model Category

<form method="post">
   <div class="border p-3 mt-4">
	    <div class="row pb-2">
		  <h2 class="text-primary">Create Category</h2>
		</div>

		@* <div asp-validation-summary="All"></div> *@
		<div asp-validation-summary="ModelOnly"></div>
		 <div class="row pb-2">
			 <label  asp-for="Name"></label>
			 <input type="text" asp-for="Name" class="form-control">
			 <span asp-validation-for="Name" class="text-danger"></span>
		</div>

		 <div class="row pb-2">
			  <label asp-for="DisplayCategory"></label>
			 <input type="text" asp-for="DisplayCategory" class="form-control">
			  <span asp-validation-for="DisplayCategory" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control" style="width:150px">Create</button>
		
				</div>

				<div class="col-6 col-md-3">
						<a asp-controller="Category" asp-action="Index"  clas="btn btn-secondary form-control" style="width:150px">Back To List</a>

				</div>
			</div>
	   </div>
</form>

			 @section Scripts{
			   @{
		<parital name="_ValidationScriptsPartial" />
			   }	 
				 
			 }