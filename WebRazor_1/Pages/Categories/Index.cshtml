@page
@model WebRazor_1.Pages.Categories.IndexModel
@{
	<div class="container">
		<div class="row pt-4">
			<div class="col-6">
				<h2 class="text-primary">
					Category List
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-page="/Categories/Create" class="btn btn-primary"><i class="bi bi-award-fill"></i>Create</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Category Name</th>
					<th>Display Order</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayCategory))
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.DisplayCategory</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-page="/Categories/Edit" asp-route-Id="@obj.Id" class="btn btn-secondary" mx-2>
									<i class="bi bi-pencil-square">Edit</i>
								</a>

								<a asp-page="/Categories/Delete" asp-route-Id="@obj.Id" class="btn btn-danger" mx-2>
									<i class="bi bi-trash">Delete</i>
								</a>


							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
